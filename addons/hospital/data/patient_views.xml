<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="my_patient_form_view" model="ir.ui.view">
            <field name="name">my.patient.form.view</field>
            <field name="model">my.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Patient Name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Kittie"/>
                            </h1>

                        </div>
                        <group name="images">
                            <group>
                                <field name="age"/>
                                <field name="weight"/>
                            </group>
                            <group>
                                <field name="dob"/>
                                <field name="gender"/>
                            </group>
                        </group>
                        <notebook>

                            <page name="general_information" string="General Information">
                                <group>
                                    <group>
                                        <field name="nickname"/>
                                    </group>

                                </group>
                            </page>
                            <page name="additional_information" string="Additional Information">
                                <group>
                                    <group string="Images">
                                        <field name="patient_image" string="Patient's Image" widget="image"/>
                                    </group>

                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_patient_tree_view" model="ir.ui.view">
            <field name="name">my.patient.tree.view</field>
            <field name="model">my.patient</field>
            <field name="arch" type="xml">
                <tree string="Patients" default_order="create_date desc">
                    <field name="name"/>
                    <field name="nickname"/>
                    <field name="age"/>
                    <field name="weight"/>
                    <field name="dob"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <record id="action_my_patient" model="ir.actions.act_window">
            <field name="name">My Patient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">my.patient</field>
            <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('my_patient_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('my_patient_form_view')})]"/>
        </record>

        <menuitem id="menu_my_patient"
                  name="My Patient"
                  action="action_my_patient"
                  sequence="10"
                  web_icon="my_patient,static/description/icon.png"
                  groups="base.group_user"/>
    </data>
</odoo>




